@model IEnumerable<CaprisMedica.UI.Models.Usuarios>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UsuarioContraseña)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rol)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UsuarioContraseña)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rol.RolDescripcion)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Usuario">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Usuario">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Usuario">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
