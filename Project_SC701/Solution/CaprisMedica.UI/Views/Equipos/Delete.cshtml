@model CaprisMedica.UI.Models.Equipos

@{
    ViewData["Title"] = "Delete";
    Layout = "Layout2";
}

<h3>Estado del Registro</h3>
<div>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Delete">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row clearfix">>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="control-label">Id Equipo: </label>
                            <div class="form-line">
                                <input asp-for="EquipoId" class="form-control" />
                                <span asp-validation-for="EquipoId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row clearfix">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="control-label">Nombre: </label>
                            <div class="form-line">
                                <input asp-for="EquipoNombre" class="form-control" disabled/>
                                <span asp-validation-for="EquipoNombre" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row clearfix">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="control-label">Estado: </label>
                            <div class="form-line">
                                <select asp-for="EquipoEstado" class="form-control">
                                    <option>Activo</option>
                                    <option>Inactivo</option>
                                </select>
                                <span asp-validation-for="EquipoEstado" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="EquipoId" />
        <input type="submit" value="Delete" class="btn bg-grey waves-effect" />
        <button type="button" class="btn bg-grey waves-effect" onclick="location.href='@Url.Action("Index", "Equipos")'">Regresar</button>
    </form>
</div>
