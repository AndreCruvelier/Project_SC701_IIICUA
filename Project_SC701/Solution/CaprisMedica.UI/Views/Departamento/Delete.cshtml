@model CaprisMedica.UI.Models.Departamentos

@{
    ViewData["Title"] = "Delete";
    Layout = "Layout2";
}

<h3>¿Está seguro que desea eliminar el registro?</h3>
<div>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Delete">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row clearfix">
                    >
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="control-label">Id Equipo: </label>
                            <div class="form-line">
                                <input asp-for="DepartamentoId" class="form-control" />
                                <span asp-validation-for="DepartamentoId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row clearfix">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="control-label">Nombre: </label>
                            <div class="form-line">
                                <input asp-for="DeparatamentoNombre" class="form-control" />
                                <span asp-validation-for="DeparatamentoNombre" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row clearfix">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="control-label">Estado: </label>
                            <div class="form-line">
                                <input asp-for="DepartamentoEstado" class="form-control" />
                                <span asp-validation-for="DepartamentoEstado" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="DepartamentoId" />
        <input type="submit" value="Delete" class="btn bg-grey waves-effect" />
        <button type="button" class="btn bg-grey waves-effect" onclick="location.href='@Url.Action("Index", "Departamentos")'">Regresar</button>
    </form>
</div>